<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
    </style>
    <!-- 底部导航栏的样式 ,继承自match_wrap，有了父类所有属性-->
    <style name="dibu_daohang" parent="@style/match_wrap">
        <!-- 方向属性 -->
        <item name="android:orientation">horizontal</item>
        <!-- 背景属性 -->
        <item name="android:background">@color/chengse</item>
    </style>

    <style name="huanse">
        <item name="android:textColor">@drawable/item_selecotr</item>
    </style>

    <style name="dibu_daohang_button" parent="huanse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">10dp</item>
    </style>

</resources>
